<div class="jumbotron">
<h1>Lessons <small> Epicodus</small></h1>
</div>
  <body>
    <div class="row">
      <div class = "col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Name</h3>
          </div>
          <div class="panel-body">
              <% @lessons.each do |lesson| %>
              <a href="/lessons/<%= lesson.id %>"><%= lesson.name%></a>     <span class="badge"><%= lesson.number%></span>
            </br>
              <% end %>
          </div>
        </div>
      </div>


    <div class="col-md-6">

      <form action="/lessons" method="post" class="form-inline" role="form">
        <div class="form-group">
          <input type="text" value="<%= @lesson.name %>" class="form-control" id="lesson_name_input" placeholder="Enter lesson name" name="lesson[name]">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" value="<%= @lesson.number %>" placeholder="Enter lesson number" name="lesson[number]">
        </div>
        <button type="submit" class="btn btn-success">Create</button>
      </form>
    </div>
  </div>

<div class="row">
  <div class="col-md-6">
  </div>
  <div class="col-md-6">
      <% if @lesson.errors.any? %>
       <div class="alert alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>Please fix these errors:</strong>
        <ul>
          <% @lesson.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
        </ul>
      <% end %>
    </div>
  </body>
</div>

