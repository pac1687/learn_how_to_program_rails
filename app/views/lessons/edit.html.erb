<div class="jumbotron">
<h1>Edit <small> <%= @lesson.name %></small></h1>
</div>

<div class="row">
  <div class="col-md-6">
  </div>

  <div class="col-md-6">
      <% if @lesson.errors.any? %>
       <div class="alert alert-danger" role="alert"><button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <strong>Please fix these errors:</strong>
        <ul>
          <% @lesson.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
        </ul>
      <% end %>
    </div>
    <div class="col-md-6">
        <form action="/lessons/<%= @lesson.id %>" method="post" class="form-inline" role="form">
        <input name = "_method" type = "hidden" value = "patch">
          <div class="form-group">
            <input type="text" value="<%= @lesson.name %>" class="form-control" id="lesson_name_input" placeholder="Enter lesson name" name="lesson[name]">
          </div>
          <div class="form-group">
              <input class="form-control" type="text" value="<%= @lesson.number %>" placeholder="Enter lesson number" name="lesson[number]">
          </div>
        <button type="submit" class="btn btn-info">Update</button>
        </form>
    </div>
  </div>
</div>

